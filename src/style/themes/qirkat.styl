qirkatTheme = {
  tileFill: #B71C1C,
  text: darken(#B71C1C, 50%)
  tileOdd: #EFEBE9,
  possible: #FF5252,
  tileStroke: #212121,
  lineStroke: #212121,
  waiting: #E0E0E0,
  waitingDark: #616161,
  tileWaiting: #B71C1C,
  t1: #212121,
  t2: #fff,
  s1: #212121,
  s2: #fff,
  l1: #3E2723,
  l2: #3E2723,
}

@require "./colors"

colors(qirkatTheme, '.qirkat-theme')
blackAndWhite(qirkatTheme, '.qirkat-theme')

.qirkat-theme
  .tile:not(.possible)
    stroke-width: 1

  .tile.possible:not(.waiting)
    stroke-width: 1
    stroke: qirkatTheme.possible

  .tile
    stroke-width: 1
    stroke: qirkatTheme.tileFill

  .hull
    fill: qirkatTheme.tileFill

  text
    opacity: 1

  .dot
    fill: qirkatTheme.lineStroke

.theme--light .qirkat-theme .player-timer
  stroke: qirkatTheme.tileFill !important
.theme--dark .qirkat-theme .player-timer
  stroke: qirkatTheme.possible !important

.qirkat-theme.preview-icon
  .tile
    stroke: qirkatTheme.lineStroke
    stroke-width: 1
