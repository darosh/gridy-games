qirkatTheme = {
  tileFill: #B71C1C,
  tileOdd: #EFEBE9,
  possible: #fff,
  tileStroke: #212121,
  lineStroke: #212121,
  waiting: #E0E0E0,
  waitingDark: #616161,
  tileWaiting: #A1887F,
  t1: #212121,
  t2: #fff,
  s1: #212121,
  s2: #fff,
  l1: #3E2723,
  l2: #3E2723,
}

@require "./colors"

colors(qirkatTheme, '.qirkat-theme')

.qirkat-theme
  .tile
    stroke-width: 0
    stroke: qirkatTheme.tileFill

  rect
    stroke: #000
    stroke-width: 6
    fill: qirkatTheme.tileFill

.preview .qirkat-theme rect
  stroke-width: 3
