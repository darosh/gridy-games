theme = {
  tileFill: #2e7d32,
  possible: #8bc34a,
  tileStroke: #212121,
  lineStroke: #212121,
  waiting: #bdbdbd,
  waitingDark: #616161,
  tileWaiting: #1B5E20,
  t1: rgba(0, 0, 0, 1),
  t2: rgba(255, 255, 255, 1),
  s1: #000,
  s2: #fff,
  l1: rgba(0, 0, 0, .87),
  l2: rgba(255, 255, 255, .87),
}

@require "./colors"

colors(theme, '.reversi-theme')

.theme--dark .reversi-theme .symbol-1
    fill: #000

.reversi-theme
  .player-2 .player-status.icon
    fill: rgba(0,0,0,0.87)
  .player-2 .counter
    color: rgba(0,0,0,0.87)

.theme--light .reversi-theme
  .symbol-2
    fill: #E0E0E0

.theme--dark .reversi-theme
  .symbol-2
    stroke: theme.s2

.theme--light .reversi-theme .player-timer
  stroke: theme.tileFill !important
.theme--dark .reversi-theme .player-timer
  stroke: theme.possible !important
